H;;AAEDe,MAAAA,OAAO,CAACC,GAAR,CAAY,KAAKrC,IAAjB;AACH,KArEI;AAsELQ,IAAAA,WAtEK,cAsES;AAAA;;AACVc,MAAAA,MAAM,CAACC,IAAP,CAAY,eAAZ,EAA4B,UAACC,GAAD,EAAKC,MAAL,EAAc;AACtC,YAAGA,MAAH,EAAU;AACN,UAAA,MAAI,CAAC3B,OAAL,GAAe2B,MAAf;AACH;AACJ,OAJD;AAKH,KA5EI;AA8ELlB,IAAAA,WA9EK,cA8ES;AAAA;;AACVe,MAAAA,MAAM,CAACC,IAAP,CAAY,eAAZ,EAA4B,UAACC,GAAD,EAAKC,MAAL,EAAc;AACtC,YAAGA,MAAH,EAAU;AACN,UAAA,MAAI,CAAC5B,WAAL,GAAmB4B,MAAnB;AACH;AACJ,OAJD;AAKH;AApFI;AAzBE,CAHf","sourcesContent":["\nimport moment from 'moment';\nimport SaleTable from '../components/SaleTable.vue'\nexport default {\n    components: {\n        SaleTable,\n    },\n\n    data() {\n        return {\n            customerOpt: [],\n            itemOpt: [],\n            item: null,\n            form: {\n                invoiceNumber: null,\n                date: moment(this.date).format(\"YYYY-MM-DD\"),\n                customerId: null,\n                items: []\n            }\n        }\n    },\n\n    mounted() {\n        this.getCustomer();\n        this.getPurchase();\n        this.getInvoiceNumber();\n    },\n\n    methods: {\n        clearForm(){\n            this.form={\n                invoiceNumber:null,\n                date:moment(new Date()).format('YYYY-MM-DD').toString(),\n                customerId:null,\n                items:[]\n            },\n            this.item=null,\n            this.getInvoiceNumber()\n        },\n\n        handleSubmit(){\n            let doc={\n                invoiceNumber: this.form.invoiceNumber,\n                customerId: this.form.customerId,\n                date: moment(this.form.date,\"YYYY-MM-DD\").toString(),\n                items:[]\n            }\n\n            this.form.items.forEach((it)=>{\n                doc.items.push({\n                    _id: it._id,\n                    price: it.price,\n                    qty: it.qty,\n                })\n            })\n\n            Meteor.call('invoice.insert',doc,(err,result)=> {\n                if(result){\n                    this.clearForm();\n                }\n            });\n        },\n\n        getInvoiceNumber() {\n            Meteor.call(\"invoice.number\",(err,result)=>{\n                if(result){\n                    this.form.invoiceNumber = result\n                }\n            })\n        },\n        handleRemove(index) {\n            this.form.items.splice(index, 1)\n        },\n        total() {\n            let total = 0;\n            this.form.items.forEach((it) => {\n                total += it.price * it.qty\n            })\n            return total\n        },\n        handleChangeItem(val) {\n\n            let found = this.form.items.findIndex((doc) => {  //checking to see if thre is a duplicate value \n                return doc._id == val.itemId\n            })\n            if (found != -1) {\n                this.form.items[found].qty++;\n            } else {\n                this.form.items.push({\n                    _id: val.itemId,\n                    name: val.name,\n                    price: val.price,\n                    qty: 1,\n                })\n            }\n\n            console.log(this.form);\n        },\n        getPurchase() {\n            Meteor.call('purchase.find',(err,result)=>{\n                if(result){\n                    this.itemOpt = result\n                }\n            })\n        },\n\n        getCustomer() {\n            Meteor.call('customer.find',(err,result)=>{\n                if(result){\n                    this.customerOpt = result\n                }\n            })\n        }\n    }\n}\n"]},"sourceType":"module","hash":"83488fc3617295280c647f66d2bdc5d6496bef5b"}
